<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnThoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_bx_share_alt_1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_rectangle_344"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_sp"
        android:layout_width="285dp"
        android:layout_height="305dp"
        android:background="@drawable/background_tranperant"
        android:layout_marginTop="8dp"
        android:src="@drawable/dummy_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThoat" />

    <TextView
        android:id="@+id/stockProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/semibold"
        android:text="4.8"
        android:textColor="@color/md_blue_800"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/colorProduct"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sp" />

    <TextView
        android:id="@+id/colorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="105"
        android:textColor="@color/md_blue_800"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/stockProduct"
        app:layout_constraintEnd_toStartOf="@+id/sizeProduct"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stockProduct"
        app:layout_constraintTop_toTopOf="@+id/stockProduct" />

    <TextView
        android:id="@+id/sizeProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="375"
        android:textColor="@color/md_blue_800"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/colorProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/colorProduct"
        app:layout_constraintTop_toTopOf="@+id/colorProduct" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/regular"
        android:text="Số lượng tồn"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/stockProduct"
        app:layout_constraintStart_toStartOf="@+id/stockProduct"
        app:layout_constraintTop_toBottomOf="@+id/stockProduct" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/regular"
        android:text="Màu sắc"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/colorProduct"
        app:layout_constraintStart_toStartOf="@+id/colorProduct"
        app:layout_constraintTop_toBottomOf="@+id/colorProduct" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/regular"
        android:text="Kích thước"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/sizeProduct"
        app:layout_constraintStart_toStartOf="@+id/sizeProduct"
        app:layout_constraintTop_toBottomOf="@+id/sizeProduct" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/regular"
        android:text="JEWELRY SHOP"
        android:textStyle="bold"
        android:textColor="@color/md_blue_600"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/semibold"
        android:text="GOLD JEWELRY"
        android:textColor="@color/md_blue_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/tagfree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/infoProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="2dp"
        android:text="Banh troi are small white balls made of brown sugar, wrapped in glutinous rice flour. The name floating cakes came about from the way it is actually cooked."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct" />

    <ImageView
        android:id="@+id/btn_tru"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_group_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoProduct" />

    <EditText
        android:id="@+id/etSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/semibold"
        android:text="1"
        android:textColor="@color/md_blue_800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_tru"
        app:layout_constraintStart_toEndOf="@+id/btn_tru"
        app:layout_constraintTop_toTopOf="@+id/btn_tru" />

    <ImageView
        android:id="@+id/btn_them"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_group_401"
        app:layout_constraintBottom_toBottomOf="@+id/etSL"
        app:layout_constraintStart_toEndOf="@+id/etSL"
        app:layout_constraintTop_toTopOf="@+id/etSL" />

    <TextView
        android:id="@+id/priceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/semibold"
        android:text="$5.78"
        android:textColor="@color/md_blue_800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_them"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_them" />

