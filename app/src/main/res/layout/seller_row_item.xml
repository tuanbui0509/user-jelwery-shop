<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sellerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/myrect"
    android:layout_marginEnd="8dp"
    android:elevation="5dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sanpham_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/background_tranperant1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/daychuyen" />

        <TextView
            android:id="@+id/quality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:maxWidth="150dp"
            android:text="Soluong"
            android:textColor="@color/md_blue_400"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/sanpham_name"
            app:layout_constraintTop_toBottomOf="@+id/sanpham_name" />


        <TextView
            android:id="@+id/sanpham_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/semibold"
            android:text="TextView"
            android:maxWidth="200dp"
            android:textColor="@color/md_blue_600"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/sanpham_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="240dp"
            android:fontFamily="@font/semibold"
            android:text="$6.05"
            android:textColor="@color/md_blue_600"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/quality"
            app:layout_constraintTop_toTopOf="@+id/quality"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_radius"
            android:padding="0dp"
            android:text="Mua"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>