<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/list"
    android:background="#79ECF3FA"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/myrect"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgSanPham"
            android:layout_width="100dp"
            android:background="@drawable/background_tranperant"
            android:layout_height="100dp"
            android:layout_marginRight="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/semibold"
                android:text="Ten san pham"
                android:textColor="@color/md_blue_600"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvQuanlity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:text="So luong"
                android:textColor="@color/md_blue_200"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/md_blue_400"
                android:text="GiÃ¡"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_close" />
    </LinearLayout>
</LinearLayout>